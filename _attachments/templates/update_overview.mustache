    <fieldset id="filter">
      <legend>Filter</legend>

      <div id="app-selection">
        <span>Application: </span>
        <span>All</span>
        <span>Firefox</span>
        <span>MetroFirefox</span>
      </div>

      <div id="branch-selection">
        <span>Branch:</span>
        <span>All</span>
        {{#firefox_versions}}
          <span>{{{.}}}</span>
        {{/firefox_versions}}
      </div>

      <div id="channel-selection">
        <span>Channel: </span>
        <span>All</span>
        {{#update_channels}}
          <span>{{{.}}}</span>
        {{/update_channels}}
      </div>

      <div id="date">
        <span>From: </span>
        <input id="start-date" class="datepicker" type="text" value="" size="11" />
        <span>To: </span>
        <input id="end-date" class="datepicker" type="text" value="" size="11" />
      </div>
    </fieldset>

    <h2>Overview of Update Tests</h2>

    <table id="results">
      <thead>
        <tr>
          <th>Target Build</th>
          <th>Source Build</th>
          <th>Channel</th>
          <th># Testruns</th>
          <th># Failed</th>
        </tr>
      </thead>
      <tbody>
      {{#updates}}
        <tr>
          <td><a href="{{detail_url}}">{{post_build}}</a></td>
          <td>{{pre_build}}</a></td>
          <td>{{channel}}</td>
          <td>{{testrun_count}}</td>
          <td>{{failure_count}}</td>
        </tr>
      {{/updates}}
      </tbody>
    </table>
